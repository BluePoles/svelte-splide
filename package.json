    "@typescript-eslint/eslint-plugin": "^5.17.0",
    "@typescript-eslint/parser": "^5.17.0",
    "eslint": "^8.12.0",
    "eslint-plugin-svelte3": "^3.4.1",
    "fs-extra": "^10.0.1",
    "gh-pages": "^3.2.3",
    "jest": "^27.5.1",
    "svelte": "^3.46.6",
    "svelte-check": "^2.4.6",
    "svelte-preprocess": "^4.10.5",
